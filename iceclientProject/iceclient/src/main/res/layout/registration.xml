<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/cwhite"
    android:gravity="top"
    tools:context=".HelloActivity" >

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="butcancel"
        android:background="@drawable/back_button"
        android:textColor="@color/text_button"
        android:text="Отмена" />

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/cancel"
        android:onClick="butok"
        android:background="@drawable/back_button"
        android:textColor="@color/text_button"
        android:text="Применить" />
    <ScrollView
        android:id="@+id/myview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cancel"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:fillViewport="false">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/cwhite"
        android:orientation="vertical"
        android:layout_above="@+id/cancel"
        android:layout_alignParentLeft="true">
        <TextView
            android:id="@+id/rtvi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Имя"
            android:textColor="@color/cblue" />

        <EditText
            android:id="@+id/rei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView2"
            android:ems="10"
            android:hint="Ваше имя"
            android:textColor="@color/cblack"
            android:inputType="textCapWords"/>

        <TextView
            android:id="@+id/rtvf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText2"
            android:layout_below="@+id/editText2"
            android:text="Фамилия"
            android:textColor="@color/cblue" />

        <EditText
            android:id="@+id/ref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView1"
            android:ems="10"
            android:hint="Ваша фамилия"
            android:textColor="@color/cblack"
            android:inputType="textCapWords"/>

        <TextView
            android:id="@+id/rtvo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText1"
            android:layout_below="@+id/editText1"
            android:text="Отчество"
            android:textColor="@color/cblue" />

        <EditText
            android:id="@+id/reo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView3"
            android:ems="10"
            android:hint="Ваше отчество"
            android:textColor="@color/cblack"
            android:inputType="textCapWords" />

        <TextView
            android:id="@+id/rtvt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textView3"
            android:layout_below="@+id/editText3"
            android:text="Телефон"
            android:textColor="@color/cblue" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText3"
            android:layout_below="@+id/textView5"
            android:text="+7"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/cblue" />

        <EditText
            android:id="@+id/ret"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ваш номер"
            android:inputType="phone"
            android:textColor="@color/cblack"
            android:maxLength="10" />

        <TextView
            android:id="@+id/rtvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView8"
            android:layout_below="@+id/editText4"
            android:text="Логин"
            android:textColor="@color/cblue" />

        <EditText
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView7"
            android:layout_below="@+id/textView7"
            android:ems="10"
            android:hint="Адресс вашей почты"
            android:textColor="@color/cblack"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/rtvp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignRight="@+id/textView9"
            android:layout_below="@+id/editText5"
            android:text="Пароль"
            android:textColor="@color/cblue" />

        <EditText
            android:id="@+id/rep"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="4 символа"
            android:inputType="textPassword"
            android:textColor="@color/cblack"
            android:maxLength="4" />

        <TextView
            android:id="@+id/rtvpp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/editText7"
            android:text="Повторите пароль"
            android:textColor="@color/cblue" />

        <EditText
            android:id="@+id/repp"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView9"
            android:layout_toLeftOf="@+id/button1"
            android:ems="10"
            android:hint="4 символа"
            android:inputType="textPassword"
            android:textColor="@color/cblack"
            android:maxLength="4" />

        <CheckBox
            android:id="@+id/rc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/editText6"
            android:text="Вы супервайзер"
            android:textColor="@color/cblue" />

        <TextView
            android:id="@+id/rtvd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/checkBox1"
            android:text="Дата рождения"
            android:textColor="@color/cblue" />
        <Button
            android:id="@+id/datebutton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/rtvd"
            android:onClick="butreg_dlgd"
            android:background="@drawable/back_button"
            android:textColor="@color/cwhite"
            android:text="ИЗМЕНИТЬ ДАТУ РОЖДЕНИЯ" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>